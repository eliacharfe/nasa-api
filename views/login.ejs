<%- include('includes/head.ejs') %>

<body class="bg-dark">
<div class="container-fluid myborder image-background-login " >
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div>
                <div class="myform form border border-primary border-3  mt-4 mb-4">

                    <p class="alert alert-success <% if (msg === "") { %> d-none <% } %>">
                        <strong><%= msg %> </strong></p>

                    <img src="https://static.wixstatic.com/media/9c808c_f900904c3241435e8866bbd5072c00d4~mv2.gif"
                         class="card-img-top myborder imgGif center " alt="..." >

                    <div class="col-md-12 text-center text-white bg-primary myborder mb-2">
                        <h2><%= title %></h2>
                    </div>

                    <form action="/homePage" method="post" id="ajaxValidationLoginPost" name="login" >
                        <div class="form-group">
                            <label for="loginEmail mb-4">Email address</label>
                            <span class="star text-danger">*</span>
                            <input type="text" name="loginEmail"  id="loginEmail"
                                   class="form-control myborder myinput mb-2 mt-2 <% if (emailError !== "") { %> is-invalid <% } %>"
                                   aria-describedby="emailHelp"  placeholder="Enter your email here" >
                            <div class="text-danger errormessage"><%= emailError %></div>
                        </div>

                        <div class="form-group">
                            <label for="loginPwd">Password</label>
                            <span class="star text-danger">*</span>
                            <input type="password" name="loginPwd"  id="loginPwd"
                                   class="form-control myborder myinput mb-2 mt-2 <% if (passwordError !== "") { %> is-invalid <% } %>"
                                   aria-describedby="emailHelp" placeholder="Enter your password">
                            <div class="text-danger errormessage"><%= passwordError %></div>
                        </div>

                        <div class="form-group">
                            <p class="text-center"><i>Welcome back! log in to see new mars photos!</i></p>
                        </div>

                        <input type="hidden" name="firstName" value="<%= firstname %>">
                        <input type="hidden" name="lastName" value="<%= lastname %>">

                        <div class="col-md-12 text-center ">
                            <span class="spinner-grow spinner-grow-sm bg-primary" role="status" aria-hidden="true"></span>
                            <input type="submit" name="submitLog" id="submitLog" value="Log in"  class=" btn btn-block mybtn btn-primary w-100">
                        </div>
                        <div class="col-md-12 ">
                            <div class="login-or " >
                                <hr class="hr-or">
                                <span class="span-or" >or</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <p class="text-center"><i>Don't have an account?</i></p>
                        </div>
                        <div class="col-md-12 mb-3">
                            <p class="text-center">
                                <a href="/register" class="signupBtn btn btn-secondary btn-block mybtn text-center w-100">Register</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('includes/end.ejs') %>











